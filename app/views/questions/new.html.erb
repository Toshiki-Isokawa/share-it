<h1>質問投稿</h1>

<div class="col-sm-10">
    <%= form_with(model: @question, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
            <div class="mt-1">
              <%= f.text_area :title, :placeholder =>"質問のタイトル",class: 'form-control', rows: 1 %>
            </div>
            <div class="mt-1">
              <%= f.text_area :content, class: 'form-control',:placeholder =>"質問の内容", rows: 5 %>
            </div>
            <div class="mt-1">
                <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
                <%= link_to '一覧に戻る', root_url %>
            </div>
        </div>
     <% end %>
</div>