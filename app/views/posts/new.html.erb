<h1 style="background: linear-gradient(transparent 70%, #a7d6ff 70%);">Blog</h1>

<div class="col-sm-10">
    <%= form_with(model: @post, local: true) do |f| %>
        <div class="form-group">
            <%= f.file_field :image %>
        </div>
        <div class="form-group">
            <%= f.text_area :caption, class: 'form-control',:placeholder =>"Blogの内容", rows: 7 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>
</div>
