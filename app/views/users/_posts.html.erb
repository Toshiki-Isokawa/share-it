<ul class="list-unstyled">
  <% posts.each do |post| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(post.user, { size: 100 }) %>" alt="">
      <div class="media-body">
        <div>
          <h1><%= link_to post.user.name, user_path(post.user) %></h1> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div>
          <h2 class="mb-0"><%= link_to post.image, post_path(post.id) %></h2>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>